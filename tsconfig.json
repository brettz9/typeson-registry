{
  "compilerOptions": {
    "lib": ["es2024", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "dist"
  },
  "include": ["index.js", "utils/**/*.js", "types/**/*.js", "presets/**/*.js", "polyfills/**/*.js", "test/**/*.js", "browser-test/mochaESMLoader.js"],
  "exclude": ["polyfills/createObjectURL.umd.cjs"]
}
